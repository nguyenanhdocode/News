@model Application.Models.Post.DeletePostModel;

<div class="alert alert-warning">
    <form method="post">
        <h3>Xoá bài đăng</h3>
        <p class="mb-0">Bạn có muốn xoá bài đăng <b>@Model.Title</b> không?</p>
        <p>
            Dữ liệu không thể khôi phục sau khi thực hiện thao tác này!
        </p>
        <hr />
        <div class="text-end">
            <a class="btn btn-light" href="/Posts">Quay lại</a>
            <button type="submit" class="btn btn-danger">Xác nhận xoá</button>
        </div>
        @Html.HiddenFor(p => p.Id)
    </form>
</div>