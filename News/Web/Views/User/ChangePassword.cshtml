@model Application.Models.User.ChangePasswordModel;

<h3>Đổi mật khẩu</h3>
<form method="post">
    <div class="mb-3">
        <label for="password" class="form-label">Mật khẩu cũ</label>
        @Html.PasswordFor(p => p.OldPassword, htmlAttributes: new {
            @class = "form-control"
        })
        <small class="text-danger d-block">@Html.ValidationMessageFor(model => model.OldPassword)</small>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Mật khẩu mới</label>
        @Html.PasswordFor(p => p.NewPassword, htmlAttributes: new {
                @class = "form-control"
        })
        <small class="text-danger d-block">@Html.ValidationMessageFor(model => model.NewPassword)</small>
        <small>Mật khẩu tối thiểu 10 ký tự, bao gồm số và ký tự đặc biệt.</small>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Nhập lại mật khẩu</label>
        @Html.PasswordFor(p => p.ConfirmPassword, htmlAttributes: new
            {
                @class = "form-control"
            })
        <small class="text-danger d-block">@Html.ValidationMessageFor(model => model.ConfirmPassword)</small>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>